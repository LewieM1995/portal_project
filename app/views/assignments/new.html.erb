<%= form_with(model: @assignment, url: assignments_path, method: :post) do |form| %>
  <div>
    <%= form.label :client_id, 'Select User:' %>
    <%= form.select :client_id, options_from_collection_for_select(@users, 'client_id', lambda { |user| "#{user.first_name} #{user.last_name}" }) %>
  </div>

  <div>
    <%= form.label :property_id, 'Select Property:' %>
    <%= form.select :property_id, options_from_collection_for_select(@properties, 'id', 'property_name') %>
  </div>

  <div>
    <%= form.submit 'Assign Property to User' %>
  </div>
<% end %>
