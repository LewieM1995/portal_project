
<div class="acc-creation-container">
  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :first_name, required: true, placeholder:"Mary", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :last_name, required: true, placeholder:"Jane", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :phone, required: true, placeholder:"07827463512", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :address_first, required: true, placeholder:"House number", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :address_second, placeholder:"Street", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :address_third, placeholder:"Town/city", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" }%>
        <%= f.input :postcode, required: true, placeholder:"Postcode", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :email, required: true, placeholder:"Email", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <%= f.input :password, required: true, placeholder:"Password", input_html: { class: 'form-control' }, wrapper_html: { class: "mb-3" } %>
        <div>
          <%= f.label :Date_of_birth, required: true %>
          <%= f.text_field :dob, id: 'datepicker', required: true, placeholder:"2001-01-01", class: "date-picker" %>
        </div>
        
        <div class="form-actions">
          <%= f.button :submit, value: "Sign Up", class:"btn btn-primary" %>
        </div>
  <% end %>
  </div>

