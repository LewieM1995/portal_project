<h2 style="color: green; text-align: center"><%= notice %></h2>

<%= render @client_detail %>

<div style="margin: 1rem auto 0 auto; width: 300px; text-align: center">
  <%= link_to "Edit this client detail", edit_client_detail_path(client_id: @client_detail.client_id), class: "btn btn-warning" %> |
  <%= link_to "Back to clients", client_details_path, class: "btn btn-primary" %>
</div>
<div style="margin: 1rem auto 0 auto; width: 300px; text-align: center">
  <%= button_to "Destroy this client detail", @client_detail, method: :delete, class: "btn btn-danger" %>
</div>
